<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="project.spring.nft.WishlistMapper">
	
	<!-- 삽입 -->
	<insert id="insert">
		insert into ${wishlist}
		(${memberId}, ${artName}, ${artPrice}, ${artFileName})
		values (#{memberId}, #{artName}, #{artPrice}, #{artFileName})
	</insert>


	<!-- 조회 -->
	<select id="select_all" resultType="WishlistVO">
		select * 
		from ${wishlist}
		where ${memberId} = #{memberId}
		order by ${wishNo} desc
	</select>
	
	<!-- 삭제 -->
	<delete id="delete">
		delete from ${wishlist} where ${wishNo} = #{wishNo}
	</delete>
</mapper>