<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="project.spring.nft.ArtMapper">
	
	<insert id="insert">
		insert into ${art} 
		(${memberId}, ${artName}, ${artPrice}, ${artContent}, ${artShowDate}, ${artFileName})
		values(#{memberId}, #{artName}, #{artPrice}, #{artContent}, #{artShowDate}, #{artFileName})
	</insert>
	
	<update id="update_nickname">
		update ${art}
		set ${memberNickname} = (
			select ${memberNickname}
			from ${member}
			where ${memberId}=#{memberId}
		)
		where ${memberId}=#{memberId}
	</update>

	<!-- 최신순 정렬(기본값) -->
	<select id="select_all_by_no" resultType="ArtVO">
		select * 
		from ${art}
		order by ${artNo} desc
	</select>
	
	<!-- 찜하기순 정렬 -->
	<select id="select_all_by_wish" resultType="ArtVO">
		select *
		from ${art}
		order by ${artWishCount} desc
	</select>
	
	<!-- 조회수순 정렬 -->
	<select id="select_all_by_view" resultType="ArtVO">
		select *
		from ${art}
		order by ${artViewCount} desc
	</select>
	
	<!-- 작품명 검색 -->
	<select id="select_by_art_name" resultType="ArtVO">
		select *
		from ${art}
		where ${artName} like #{keyword}
		order by ${artNo} desc
	</select>
	
	<!-- 작가이름 검색 -->
	<select id="select_by_member_nickname" resultType="ArtVO">
		select *
		from ${art}
		where ${memberNickname} like #{keyword}
		order by ${artNo} desc
	</select>
</mapper>